<script src="https://cdn.tailwindcss.com"></script>

<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <h1 class="text-3xl font-bold text-center text-gray-900 mb-8">Vagas disponíveis</h1>

  <div class="max-w-3xl mx-auto grid gap-6">
    <% vagas.forEach(vaga => { %>
      <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
        <div class="space-y-4">
          <div class="flex items-center">
            <span class="text-lg font-medium text-gray-900"><%= vaga.cidade %></span>
            <span class="ml-2 px-3 py-1 text-sm font-medium bg-blue-100 text-blue-800 rounded-full">
              <%= vaga.tipo_entregador %>
            </span>
          </div>

          <div>
            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-1">Condições</h3>
            <p class="text-gray-700"><%= vaga.condicoes %></p>
          </div>

          <div>
            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-1">Detalhes</h3>
            <p class="text-gray-700"><%= vaga.detalhes %></p>
          </div>

          <form action="/vaga/<%= vaga.id %>/candidatar" method="GET">
            <button type="submit" 
              class="w-full mt-4 bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-150 ease-in-out">
              Me candidatar
            </button>
          </form>
        </div>
      </div>
    <% }) %>
  </div>
</div>
